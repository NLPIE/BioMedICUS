<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
    <primitive>true</primitive>
    <annotatorImplementationName>edu.umn.biomedicus.tools.newinfo.NewInformationRtfRewriter</annotatorImplementationName>
    <analysisEngineMetaData>
        <name>New Information RTF Annotation Inserting Writer</name>
        <description>Inserts placeholders around annotations in the original RTF document.</description>
        <version>${project.version}</version>
        <vendor>${project.organization.name}</vendor>
        <configurationParameters>
            <configurationParameter>
                <name>outputDirectory</name>
                <description>Directory write the output RTF files to.</description>
                <type>String</type>
            </configurationParameter>
            <configurationParameter>
                <name>beginMap</name>
                <description>
                    Mapping of new information kind to the inserted text as a begin marker for the regions. For new
                    information kinds k = { 0 : n } the array should contain the kinds at indexes k * 2 and their
                    insertion text at indexes k * 2 + 1.
                </description>
                <type>String</type>
                <multiValued>true</multiValued>
            </configurationParameter>
            <configurationParameter>
                <name>endMap</name>
                <description>
                    Mapping of new information kind to the end marker insertion text. For new information kinds
                    k = { 0 : n } the array should contain the kinds at indexes k * 2 and their insertion text at
                    indexes k * 2 + 1.
                </description>
                <type>String</type>
                <multiValued>true</multiValued>
            </configurationParameter>
            <configurationParameter>
                <name>colorTableMarker</name>
                <description>The marker that gets inserted at the end of the color table.</description>
                <type>String</type>
            </configurationParameter>
            <configurationParameter>
                <name>stylesheetMarker</name>
                <description>The marker that gets inserted at the end of the stylesheet.</description>
                <type>String</type>
            </configurationParameter>
        </configurationParameters>
        <configurationParameterSettings>
            <nameValuePair>
                <name>beginMap</name>
                <value>
                    <array>
                        <string>New</string>
                        <string>\u572662299</string>
                        <string>newProcedure</string>
                        <string>\u572662315</string>
                        <string>newMed</string>
                        <string>\u572662331</string>
                        <string>newMedication</string><!-- same as above -->
                        <string>\u572662331</string>
                        <string>newFindings</string>
                        <string>\u572662347</string>
                    </array>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>endMap</name>
                <value>
                    <array>
                        <string>New</string>
                        <string>\u572662302</string>
                        <string>newProcedure</string>
                        <string>\u572662318</string>
                        <string>newMed</string>
                        <string>\u572662334</string>
                        <string>newMedication</string><!-- same as above -->
                        <string>\u572662334</string>
                        <string>newFindings</string>
                        <string>\u572662350</string>
                    </array>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>colorTableMarker</name>
                <value>
                    <string>\u572662283</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <name>stylesheetMarker</name>
                <value>
                    <string>\u572662284</string>
                </value>
            </nameValuePair>
        </configurationParameterSettings>
        <typeSystemDescription>
            <imports>
                <import name="edu.umn.biomedicus.types.TypeSystem"/>
            </imports>
        </typeSystemDescription>
        <capabilities>
            <capability>
                <inputs>
                    <type allAnnotatorFeatures="true">edu.umn.biomedicus.type.NewInformationAnnotation</type>
                </inputs>
                <inputSofas>
                    <sofaName>OriginalDocumentView</sofaName>
                </inputSofas>
            </capability>
        </capabilities>
        <operationalProperties>
            <modifiesCas>false</modifiesCas>
            <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
            <outputsNewCASes>false</outputsNewCASes>
        </operationalProperties>
    </analysisEngineMetaData>
</analysisEngineDescription>
