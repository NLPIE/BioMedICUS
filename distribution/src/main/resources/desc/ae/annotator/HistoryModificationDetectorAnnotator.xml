<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
    <primitive>true</primitive>
    <annotatorImplementationName>edu.umn.biomedicus.uima.ModificationDetectorAnnotator</annotatorImplementationName>
    <analysisEngineMetaData>
        <name>History Modification Detector Annotator</name>
        <description/>
        <version>${project.version}</version>
        <vendor>${organization.name}</vendor>
        <configurationParameters>
            <configurationParameter>
                <name>ModificationType</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>true</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>leftContextCues</name>
                <type>String</type>
                <multiValued>true</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>rightContextCues</name>
                <type>String</type>
                <multiValued>true</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>leftContextScope</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>rightContextScope</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>scopeDelimitersPOS</name>
                <type>String</type>
                <multiValued>true</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>scopeDelimitersTxt</name>
                <type>String</type>
                <multiValued>true</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>
            <configurationParameter>
                <name>shortSentenceLen</name>
                <type>String</type>
                <multiValued>false</multiValued>
                <mandatory>false</mandatory>
            </configurationParameter>

        </configurationParameters>
        <configurationParameterSettings>

            <nameValuePair>
                <!-- name of the modification type - e.g. negation, history, family, etc. -->
                <name>ModificationType</name>
                <value>
                    <string>history</string>
                </value>
            </nameValuePair>

            <nameValuePair>
                <!-- words signaling modification to the eft of the Term - e.g. "denies chest pain" -->
                <name>leftContextCues</name>
                <value>
                    <array>
                        <string>history</string>
                        <string>historical</string>
                        <string>histories</string>
                        <string>status post</string>
                        <string>s/p</string>
                        <string>s-p</string>
                    </array>
                </value>
            </nameValuePair>
            <nameValuePair>
                <!-- words signaling modification to the right of the Term - e.g. "rales - none" -->
                <name>rightContextCues</name>
                <value>
                    <array>
                        <string>history</string>
                    </array>
                </value>
            </nameValuePair>
            <nameValuePair>
                <!-- length of search scope to the left of a Term in tokens -->
                <name>leftContextScope</name>
                <value>
                    <string>-1</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <!-- length of search scope to the right of a Term in tokens -->
                <name>rightContextScope</name>
                <value>
                    <string>3</string>
                </value>
            </nameValuePair>
            <nameValuePair>
                <!-- syntactic indicators of scope boundaries -->
                <name>scopeDelimitersPOS</name>
                <value>
                    <array>
                        <string>WDT</string>
                        <string>PP</string>
                        <string>VBZ</string>
                    </array>
                </value>
            </nameValuePair>
            <nameValuePair>
                <!-- textual indicators of scope boundaries -->
                <name>scopeDelimitersTxt</name>
                <value>
                    <array>
                        <string>but</string>
                        <string>however</string>
                        <string>therefore</string>
                        <string>otherwise</string>
                        <string>;</string>
                        <string>:</string>
                    </array>
                </value>
            </nameValuePair>
            <nameValuePair>
                <!-- max number of tokens in a "short" sentence -->
                <name>shortSentenceLen</name>
                <value>
                    <string>10</string>
                </value>
            </nameValuePair>

        </configurationParameterSettings>

        <typeSystemDescription>
            <imports>
                <import name="edu.umn.biomedicus.types.TypeSystem"/>
            </imports>
        </typeSystemDescription>

        <typePriorities>
            <imports>
                <import name="edu.umn.biomedicus.types.TypeSystemTypePriorities"/>
            </imports>
        </typePriorities>
        <fsIndexCollection/>
        <capabilities>
            <capability>
                <inputs>
                    <type allAnnotatorFeatures="true">edu.umn.biomedicus.mtsamples.types.Token</type>
                    <type allAnnotatorFeatures="true">edu.umn.biomedicus.mtsamples.types.Sentence</type>


                </inputs>
                <outputs>
                    <type allAnnotatorFeatures="true">edu.umn.biomedicus.mtsamples.types.Concept</type>
                    <type allAnnotatorFeatures="true">edu.umn.biomedicus.mtsamples.types.Term</type>
                </outputs>
                <languagesSupported/>
            </capability>
        </capabilities>
        <operationalProperties>
            <modifiesCas>true</modifiesCas>
            <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
            <outputsNewCASes>false</outputsNewCASes>
        </operationalProperties>
    </analysisEngineMetaData>
</analysisEngineDescription>
